<Window x:Class="ExamResult.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改密码" Height="230" Width="450" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="30">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="密        码：" FontSize="22" FontFamily="华文新魏"/>
            <PasswordBox Name="pb_password" Width="200" FontFamily="华文新魏" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="确认密码：" FontSize="22" FontFamily="华文新魏" />
            <PasswordBox Name="pb_confirm" Width="200" FontFamily="华文新魏"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="确认" Click="Button_Click_1" Margin="10 0 10 0" Width="70" Height="25" FontFamily="华文新魏" FontSize="18" />
            <Button Content="取消" Click="Button_Click_2" Margin="0 0 50 0" Width="70" Height="25" FontFamily="华文新魏" FontSize="18" />
        </StackPanel>
    </StackPanel>
</Window>
