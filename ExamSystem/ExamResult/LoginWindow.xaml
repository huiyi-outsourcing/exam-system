<Window x:Class="ExamResult.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登陆" Height="250" Width="500" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="40">
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="用户名：" FontSize="22" FontFamily="华文新魏" />
            <TextBox Name="tb_name" Width="200" FontFamily="华文新魏" FontSize="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="密    码：" FontSize="22" FontFamily="华文新魏" />
            <PasswordBox Name="pb_password" Width="200" FontFamily="华文新魏" FontSize="20" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="登陆" Click="Button_Click_1" Width="80" FontFamily="华文新魏" Height="25" FontSize="22" Margin="0 0 100 0"/>
        </StackPanel>
    </StackPanel>
</Window>
