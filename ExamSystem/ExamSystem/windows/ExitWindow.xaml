<Window x:Class="ExamSystem.windows.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExitWindow" Height="300" Width="500" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Window.Background>
        <ImageBrush ImageSource="../resources/img/提示1.png" />
    </Window.Background>
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="您确定退出吗？" Foreground="Black" FontSize="40" HorizontalAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" Margin="0 40 0 0">
                <Button Name="btn_confirm" Click="btn_confirm_Click_1" Content="确定" />
                <Button Name="btn_cancel" Click="btn_cancel_Click_1" Content="取消" Margin="50 0 0 0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
